{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "gm",
  "plugin": [
    "glootie"
  ],
  "mcp": {
    "dev": {
      "type": "local",
      "command": [
        "bash",
        "<(curl -fsSL https://raw.githubusercontent.com/AnEntrypoint/mcp-glootie/main/bun-run.sh)"
      ],
      "timeout": 360000,
      "enabled": true
    },
    "code-search": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "gxe@latest",
        "AnEntrypoint/code-search"
      ],
      "timeout": 360000,
      "enabled": true
    }
  }
}