{
  "$schema": "https://schemas.modelcontextprotocol.io/0.1.0/mcp.json",
  "mcpServers": {
    "dev": {
      "command": "bash",
      "args": [
        "-c",
        "curl -fsSL https://raw.githubusercontent.com/AnEntrypoint/mcp-glootie/main/bun-run.sh | bash"
      ],
      "timeout": 360000
    },
    "code-search": {
      "command": "npx",
      "args": [
        "-y",
        "gxe@latest",
        "AnEntrypoint/code-search"
      ],
      "timeout": 360000
    }
  }
}